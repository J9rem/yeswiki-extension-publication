<!DOCTYPE html>
<html class="html-publication">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width">
		<title>{{ metadatas['publication-title'] | default('Publication') }} â€¢ {{ siteTitle }}</title>
		{{ styles | raw }}

    {% block css %}
    <style type="text/css">
			@media print {
				@page {
					size: {{metadatas['publication-page-format']}}
					{{metadatas['publication-page-orientation']}}
					;
					{% if metadatas['publication-print-marks'] == '1' %}
						bleed: 6mm;
						marks: crop cross;
					{% endif %}
				}
			}
    </style>
    {% endblock %}

    {% block js %}
		<!-- Paged.js handles the printing layout -->
		<script type="module" src="{{ baseUrl }}/tools/publication/presentation/browser/print.js"></script>
    {% endblock %}
    <script src="{{ baseUrl }}/tools/publication/presentation/browser/is-pdf-ready.js"></script>
  </head>

	<body class="{{ stylesModifiers | join(' ') }}" data-publication="{{ initialPublicationState | default('awaiting-layout') }}">
    {% block publication %}
      {% if metadatas['publication-cover-page'] == '1' %}
        {% include "@publication/includes/image-cover.twig" %}
      {% endif %}

      {{ content | raw }}
    {% endblock %}
	</body>
</html>

